<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Page Title -->
        <TextView
            android:id="@+id/tvAttendanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Attendance"
            android:textColor="#1B5E20"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Course Card 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/course_card"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSE 101 - Introduction to Programming"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#33691E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance: 85%"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Course Card 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/course_card"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSE 202 - Data Structures"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#33691E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance: 90%"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Course Card 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/course_card"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATH 111 - Calculus I"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#33691E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance: 92%"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Total Attendance -->
        <TextView
            android:id="@+id/tvTotalAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Attendance: 89%"
            android:textColor="#1B5E20"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
